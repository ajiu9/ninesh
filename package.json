{
  "name": "ninesh",
  "type": "module",
  "version": "0.0.1",
  "description": "Ajiu9's daily shell",
  "author": "ajiu9",
  "license": "MIT",
  "homepage": "https://github.com/ajiu9/ninesh#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ajiu9/ninesh.git"
  },
  "bugs": {
    "url": "https://github.com/ajiu9/ninesh/issues"
  },
  "keywords": [
    "shell",
    "obsidian",
    "zsh"
  ],
  "main": "./dist/index.js",
  "bin": "./bin/index.cjs",
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "build": "tsup --format cjs,esm --dts --clean",
    "clean": "pnpm run clean:dist && pnpm run -r --parallel clean",
    "clean:dist": "rimraf dist",
    "clean:obsiflow": "pnpm -C packages/obsiflow clean",
    "lint": "eslint --flag unstable_ts_config . --fix",
    "check": "tsc --incremental --noEmit",
    "prepare": "simple-git-hooks",
    "test": "pnpm build && pnpm -C packages/obsiflow test",
    "dev": "pnpm build && pnpm link --global"
  },
  "dependencies": {
    "cac": "^6.7.14"
  },
  "devDependencies": {
    "@ajiu9/eslint-config": "2.5.0",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@types/node": "^22.1.0",
    "consola": "^3.2.3",
    "eslint": "^9.10.0",
    "jiti": "^2.4.2",
    "lint-staged": "^15.2.7",
    "minimist": "^1.2.8",
    "picocolors": "^1.0.1",
    "rimraf": "^6.0.1",
    "rollup": "^4.19.2",
    "rollup-plugin-esbuild": "^6.1.1",
    "rollup-plugin-polyfill-node": "^0.13.0",
    "simple-git-hooks": "^2.11.1",
    "tsup": "^8.3.5",
    "tsx": "^4.16.5",
    "typescript": "^5.2.2"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx,md,json}": "eslint --fix"
  }
}
