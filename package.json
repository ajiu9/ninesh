{
  "name": "ninesh",
  "type": "module",
  "version": "1.2.0",
  "description": "Ajiu9's daily shell",
  "author": "ajiu9",
  "license": "MIT",
  "homepage": "https://github.com/ajiu9/ninesh#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ajiu9/ninesh.git"
  },
  "bugs": {
    "url": "https://github.com/ajiu9/ninesh/issues"
  },
  "keywords": [
    "shell",
    "obsidian",
    "zsh"
  ],
  "main": "./dist/index.js",
  "bin": "./bin/index.cjs",
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "build": " pnpm clean:dist && tsup --format cjs,esm --dts && pnpm build:zsh",
    "prepublishOnly": "pnpm build",
    "release": "bumpp && npm publish",
    "build:zsh": "tsx ./src/app/zsh/scripts/build.ts",
    "clean": "pnpm run clean:dist && pnpm run -r --parallel clean",
    "clean:dist": "rimraf dist",
    "clean:obsiflow": "pnpm -C packages/obsiflow clean",
    "lint": "eslint --flag unstable_ts_config . --fix",
    "check": "tsc --incremental --noEmit",
    "picocolors": "^1.0.1",
    "prepare": "simple-git-hooks",
    "test": "pnpm build && pnpm -C packages/obsiflow test",
    "dev": "pnpm build && pnpm link --global",
    "start": "tsx ./src/cli.ts"
  },
  "dependencies": {
    "@clack/prompts": "^0.9.0",
    "cac": "^6.7.14",
    "fs-extra": "^11.2.0",
    "picocolors": "^1.1.1",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@ajiu9/eslint-config": "2.5.0",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.1.0",
    "@types/prompts": "^2.4.9",
    "@types/yargs": "^17.0.33",
    "bumpp": "^9.9.2",
    "consola": "^3.2.3",
    "eslint": "^9.10.0",
    "fast-glob": "^3.3.2",
    "jiti": "^2.4.2",
    "lint-staged": "^15.2.7",
    "minimist": "^1.2.8",
    "rimraf": "^6.0.1",
    "rollup": "^4.19.2",
    "rollup-plugin-esbuild": "^6.1.1",
    "rollup-plugin-polyfill-node": "^0.13.0",
    "simple-git-hooks": "^2.11.1",
    "tsup": "^8.3.5",
    "tsx": "^4.16.5",
    "typescript": "^5.2.2"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx,md,json}": "eslint --fix"
  }
}
